body, html {
  width: 100%;
  height: 100%;
}

.topLogo {
  display: flex;
  margin: 20rpx 20rpx 30rpx 10rpx;
}

.topLogoImg {
  margin: 10rpx 0 0 20rpx;
  height: 70rpx;
  width: 70rpx;
}

.Date {
  position: absolute;
  right: 30rpx;
  margin: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  margin: 20rpx 20rpx 20rpx 50rpx;
}

.description {
  margin: 20rpx 20rpx 20rpx 50rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
}

.endDate {
  font-size: 28rpx;
  font-weight: 600;
  margin: 0 0 20rpx 50rpx;
  display: flex;
  align-items: center;
}

.publishTask {
  width: 200rpx;
  font-size: 28rpx;
  position: relative;
  right: 0;
  background-color: #de3939;
  color: white;
}

.share-container {
  background-color: #f7f8f9;
  margin: 20rpx 20rpx 20rpx 20rpx;
  border-radius: 2.5%;
  border: 1px solid #dae3f2;
}

.topTitle {
  border-bottom: 1px solid #dae3f2;
  display: flex;
  height: 70rpx;
}

.logoImg {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 40rpx;
  margin-top: 15rpx;
}

.share-detail {
  margin: 30rpx 80rpx 30rpx 80rpx;
  font-size: 24rpx;
}

.shareImg {
  margin: 40rpx 80rpx 40rpx 80rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.detailImg {
  height: 160rpx;
  width: 160rpx;
  margin: 10rpx 0;
}

@media (max-width: 320px) {
  .shareButton {
    width: 120rpx;
    height: 120rpx;
    border: 1px solid red;
    border-radius: 50%;
    font-size: 0.6rem;
    font-weight: 600;
    color: white;
    background-color:red;
    line-height: 38rpx;
  }

  .grayButton {
    width: 120rpx;
    height: 120rpx;
    border: 1px solid gray;
    border-radius: 50%;
    font-size: 0.6rem;
    font-weight: 600;
    color: white;
    background-color: gray;
    line-height: 38rpx;
  }
}

@media (min-width:321px) {
  .shareButton {
    width: 120rpx;
    height: 120rpx;
    border: 1px solid red;
    border-radius: 50%;
    font-size: 100%;
    font-weight: 600;
    color: white;
    background-color: red;
    line-height: 38rpx;
  }

  .grayButton {
    width: 120rpx;
    height: 120rpx;
    border: 1px solid gray;
    border-radius: 50%;
    font-size: 100%;
    font-weight: 600;
    color: white;
    background-color: gray;
    line-height: 38rpx;
  }
}

.buttonText {
  text-align: center;
  position: relative;
  top: 18%;
}

.shareButton:active {
  filter: opacity(0.4);
}

.errorInfo {
  margin: 5% 0 5% 0;
  text-align: center;
  color: red;
}

.btn {
  border: 0px solid #f7f8f9;
  text-align: center;
  margin-bottom: 25rpx;
  line-height: 175rpx;
  border-radius: 50%;
  height: 175rpx;
  width: 175rpx;
}

.btn:active {
  filter: opacity(0.4);
}

.progress {
  display: flex;
  justify-content: space-around;
  margin: 0 80rpx;
}

.rightArrow {
  width: 40rpx;
  height: 40rpx;
  margin-top: 7%;
}

.QRCode {
  position: sticky;
  bottom: 50%;
}

.modalMask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modalDialog {
  width: 640rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 55rpx;
  border-radius: 5%;
  text-align: center;
}

.joinedUser {
  text-align: center;
}

.userImg {
  display: flex;
  justify-content: center;
}

.userImg image {
  width: 60rpx;
  height: 60rpx;
  margin: 2.5% 1%;
}
