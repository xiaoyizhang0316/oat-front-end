<view class='body'>

  <view class='topLogo'>
    <image src="{{currentTask.material.brand.logo}}" class='topLogoImg'></image>
    <text class='Date'>活动开始日期：{{currentTask.start_at}}</text>
  </view>

  <view class='title'>
    {{currentTask.title}}
  </view>
  <view class='description' wx:for='{{description}}'>
    {{item}}
  </view>
  <view class='endDate'>
    活动截止日期：{{currentTask.finish_at}}
  </view>

  <view class='share-container'>
    <view class='topTitle'>
      <text style='margin:20rpx 20rpx 20rpx 20rpx'>{{currentTask.material.title}}</text>
      <image src="{{currentTask.material.brand.logo}}" class='logoImg'></image>
    </view>

    <view class='share-detail' wx:for='{{materialDescription}}'>
      {{item}}
    </view>
    <view class='shareImg'>
      <image src='{{item}}' wx:for='{{currentTask.material.imgs}}' class='detailImg' bindtap='showImg' wx:key="{{index}}" data-id='{{index}}'></image>
    </view>

    <form bindsubmit="{{buttonMethod}}" report-submit>
      <button class="btn" form-type="submit" data-type="click">
        <view class='{{buttonClass}}' >
          <text class='buttonText'>{{buttonText}}</text>
        </view>
      </button>  
    </form>
