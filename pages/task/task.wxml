<view class='body'>

  <view class='topLogo'>
    <image src="{{currentTask.material.brand.logo}}" class='topLogoImg'></image>
    <text class='Date'>{{currentTask.start_at}}</text>
  </view>

  <view class='title'>
    {{currentTask.title}}
  </view>
  <view class='description'>
    {{currentTask.description}}
  </view>
  <view class='endDate'>
    活动截止日期：{{currentTask.finish_at}}
  </view>

  <view class='share-container'>
    <view class='topTitle'>
      <text style='margin:20rpx 20rpx 20rpx 20rpx'>{{currentTask.material.title}}</text>
      <image src="{{currentTask.material.brand.logo}}" class='logoImg'></image>
    </view>

    <view class='share-detail'>
      {{currentTask.material.description}}
    </view>
    <view class='shareImg'>
      <image src='{{item}}' wx:for='{{currentTask.material.imgs}}' class='detailImg'></image>
    </view>
    <view wx:if='{{status==0}}' class='shareButton' bindtap='shareImg'>
      一键转发
    </view>
    <view wx:if='{{status==(1||2)}}' class='shareButton' bindtap='uploadScreenshot'>
      上传截图
    </view>
    <view wx:if='{{status==3}}' class='grayButton'>
      审核中...
    </view>
    <view wx:if='{{status==4}}' class='shareButton' bindtap='getReward'>
      领取奖励
    </view>
    <view wx:if='{{status==5}}' class='shareButton'>
      已领取
    </view>
    <view wx:if='{{status==6}}' class='shareButton'>
      再次上传
    </view>
    <view wx:if='{{status==6}}' bindtap='uploadScreenshot' class='errorInfo'>
      审核失败，请再次上传
    </view>




  </view>


</view>