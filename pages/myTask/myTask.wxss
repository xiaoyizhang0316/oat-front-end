/* pages/myTask/myTask.wxss */

.item-container {
  margin: 20rpx 20rpx;
  position: relative;
  border: 1px solid gray;
  border-radius: 2%;
}

.item-container:active {
  filter:opacity(1.6);
}

.cover {
  height: 400rpx;
  width:90%;
  padding:5%;
}

.topTitle {
  font-size:32rpx;
  border-bottom: 1px solid gray;
  margin:0;
  padding:2.5% 5% 2.5% 5%;
  display: flex;
}

.logoImg {
  height:50rpx;
  width:50rpx;
  position:absolute;
  right:10rpx;
}
.desc {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #E5E7ED;
}

.left {
  font-size:24rpx;
  color:darkgray;
  margin-left:5%;
}

.right {
  font-size:24rpx;
  flex-direction: column;
  align-items: center;
  margin-right:5%;
}

.right image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}