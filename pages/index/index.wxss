/** list.wxss **/



.banner {
  background-image: url('http://wowslider.com/sliders/demo-10/data/images/dock.jpg');
  width:100%;
  height:400rpx;
  background-size: cover;
  display: flex;
  flex-direction: column;
}



.iconImg {
  width: 60rpx;
  height:60rpx;
  margin: 30rpx 0 0rpx 30rpx;
}

.bannerText {
  font-size: 20rpx;
  margin: 5rpx 0 0 30rpx;
}

.item-container {
  margin: 50rpx 30rpx;
  position: relative;
  border: 1px solid #dae3f2;
  background-color: #f7f8f9;
  border-radius: 2%;
}

.item-container:active {
  filter:opacity(1.6);
}

.taskDescription {
  padding:0rpx 5% 20rpx 5%;
  width:90%;
  font-size: 28rpx;
  line-height: 40rpx;
}

.cover {
  height: 300rpx;
  width:90%;
  padding:20rpx 5%;
}

.topTitle {
  font-size:32rpx;
  border-bottom: 1px solid #dae3f2;
  margin:0;
  padding:2.5% 5% 2.5% 5%;
  display: flex;
}

.logoImg {
  height:40rpx;
  width:40rpx;
  position:absolute;
  right:20rpx;
}
.desc {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}

.left {
  font-size:24rpx;
  color:darkgray;
  margin-left:5%;
}

.right {
  font-size:24rpx;
  flex-direction: column;
  align-items: center;
  margin-right:5%;
}

.right image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
