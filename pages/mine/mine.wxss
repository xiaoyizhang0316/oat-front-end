.userInfo {
  margin: 40rpx 43% 60rpx 43%;
  display:float;
}

.userImg {
  height:100rpx;
  width:100rpx;
}

.userNickName {
  font-size: 30rpx;
  padding-left:5rpx;
}

.menu {
  margin: 40rpx 9% 40rpx 8%;
  background-color:#f4f7fc;
  padding:10rpx 0;
  border-top:1px solid black;
  border-bottom:1px solid black;
}

.menuOption {
  margin:0 0 0 60rpx;
  font-size:36rpx;
  padding:20rpx 0 20rpx 0;
}

.menuOption:nth-child(-n+3) {
  border-bottom:1px solid black;
}

.menuOption:active {
  filter: opacity(0.1);
}
.menuLable {
  margin: 30rpx 0 30rpx 65%;
}